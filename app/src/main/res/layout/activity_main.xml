<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="412dp"
        android:layout_height="713dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Personal Detail " />

            <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fullname"
        android:layout_width="143dp"
        android:layout_height="50px"
        android:layout_alignParentTop="true"
        android:text="        Full Name:-" ></TextView>

    <EditText
        android:id="@+id/input_name"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        tools:ignore="SpeakableTextPresentCheck" />
</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="143dp"
                    android:layout_height="50px"
                    android:layout_alignParentTop="true"
                    android:text="        Email:-" ></TextView>

                <EditText
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_email"
                    android:layout_marginLeft="40px" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Phone"
                    android:layout_width="143dp"
                    android:layout_height="50px"
                    android:layout_alignParentTop="true"
                    android:text="       Contact Number:-" ></TextView>

                <EditText
                    android:layout_width="215dp"
                    android:id="@+id/input_phone"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="143dp"
                    android:layout_height="50px"
                    android:layout_alignParentTop="true"
                    android:text="        Address:-" ></TextView>

                <EditText
                    android:id="@+id/input_address"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/education"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"

                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"/>
     <TableLayout
         android:padding="8dp"
         android:layout_width="match_parent"
         android:layout_marginTop="15dp"

         android:id="@+id/table1"
         android:layout_height="match_parent">
    <TableRow android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ssc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SSC(10ths)"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/input_ssc"
            android:layout_width="171dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="Collage Name" />

        <EditText
            android:id="@+id/per_ssc"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Percentage %"
            android:inputType="number" />


    </TableRow>
         <TableRow android:id="@+id/row2"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:id="@+id/hsc"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="HSC(12ths)"
                 android:textSize="18dp" />

             <EditText
                 android:id="@+id/input_hsc"
                 android:layout_width="171dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="10dp"
                 android:hint="Collage Name" />

             <EditText
                 android:id="@+id/per_hsc"
                 android:layout_width="142dp"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="Percentage %"
                 android:inputType="number" />


         </TableRow>
         <TableRow android:id="@+id/row3"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:id="@+id/edu"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="Degree"
                 android:textSize="18dp" />

             <EditText
                 android:id="@+id/input_degree"
                 android:layout_width="171dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="10dp"
                 android:hint="Collage Name" />

             <EditText
                 android:id="@+id/per_degree"
                 android:layout_width="142dp"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="CGPI "
                 android:inputType="number" />


         </TableRow>
         <TableRow android:id="@+id/row4"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:id="@+id/master"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="Master"
                 android:textSize="18dp" />

             <EditText
                 android:id="@+id/input_master"
                 android:layout_width="171dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="10dp"
                 android:hint="Collage Name" />

             <EditText
                 android:id="@+id/per_master"
                 android:layout_width="142dp"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="CGPI"
                 android:inputType="number"
                 tools:ignore="TouchTargetSizeCheck" />


         </TableRow>
         <TableRow android:id="@+id/row5"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:id="@+id/others"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="Others"
                 android:textSize="18dp" />

             <EditText
                 android:id="@+id/input_others"
                 android:layout_width="171dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="10dp"
                 android:hint="Collage Name"
                 tools:ignore="TouchTargetSizeCheck" />

             <EditText
                 android:id="@+id/per_others"
                 android:layout_width="142dp"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="CGPI"
                 android:inputType="number" />


         </TableRow>
     </TableLayout>
     <TextView
         android:layout_marginTop="17dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Experience"

         android:textAlignment="center"
         android:textStyle="bold"
         android:textSize="20dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/table2"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/exp_row1"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/input_exper1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Detail :-"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </TableRow>
                <TableRow android:id="@+id/exp_row2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/input_comp_name"
                        android:layout_width="372dp"
                        android:layout_height="match_parent"
                        android:hint="Company Name.............."/>

                </TableRow>
                <TableRow android:id="@+id/exp_row3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/input_comp_period"
                        android:layout_width="372dp"
                        android:layout_height="match_parent"
                        android:hint="Period of Experience"/>

                </TableRow>
                <TableRow android:id="@+id/exp_row4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/input_comp_description"
                        android:layout_width="372dp"
                        android:layout_height="match_parent"
                        android:hint="Description"/>

                </TableRow>
            </TableLayout>
            <TextView
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills"

                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/input_skill"
                android:layout_marginTop="20dp"
                android:hint="Add Skill by own"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_marginTop="20dp"
               android:layout_height="match_parent">
               <Button
                   android:id="@+id/submit"
                   android:layout_centerHorizontal="true"
                   android:background="#00FFFF"
                   android:text="Submit"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="21dp"
                   android:layout_width="270dp"
                   android:layout_height="match_parent" />
           </RelativeLayout>
        </LinearLayout>


    </ScrollView>


</RelativeLayout>